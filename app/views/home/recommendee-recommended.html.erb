<div class="recommendee-recommended-container">
    <div class="top-buttons">
        <%= link_to "Home", home_path, class: 'smaller'%>
        <%= link_to "Logout", logout_path, class: 'smaller'%>
    </div>
    <div class='recommended-box-container'>
        <h3><b><%= @rec.recommender_name %></b> recommended you the following song: </h3>
        <h2><b>URL</b></h2>
        <div class="url-container">
            <%= @rec.url_to_song %>
        </div>
        <div class="buttons-container">
            <%= link_to "COPY", "", class: 'medium'%>
        </div>
    </div>

    <h1 class="h3-title">How was the recommendation?</h1>
    <div class='choice-container'>
        <div class="buttons-container">
            <%= link_to "Listened before, LIKED", home_feedback_path(verdict: 2), class: 'medium'%>
        </div>
        <div class="buttons-container">
            <%= link_to "New Song, LIKED", home_feedback_path(verdict: 3), class: 'medium'%>
        </div>
        <div class="buttons-container">
            <%= link_to "New Song, DISLIKED", home_feedback_path(verdict: 1), class: 'medium'%>
        </div>
        <div class="buttons-container">
            <%= link_to "Listened before, DISLIKED", home_feedback_path(verdict: 0), class: 'medium'%>
        </div>
    </div>
</div>

